{
  "[typescript]": {
    "editor.defaultFormatter": "denoland.vscode-deno"
  },
  "deno.enablePaths": [
    "src/",
    "test/",
    "task/",
  ],
  "[markdown]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "DavidAnson.vscode-markdownlint"
  },
  "markdownlint.config": {
    "MD024": false,
  },
  "deno.lint": true,
  "deno.importMap": "./deno.json",
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000
}